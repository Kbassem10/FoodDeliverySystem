<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fooddeliverysystem.PlaceOrderController">
   <children>
      <Label layoutX="200.0" layoutY="30.0" text="Place an Order">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="100.0" layoutY="100.0" text="Menu Item:" />
      <ComboBox fx:id="menuItemComboBox" layoutX="200.0" layoutY="95.0" prefWidth="200.0" />
      <Label layoutX="100.0" layoutY="150.0" text="Quantity:" />
      <Spinner fx:id="quantitySpinner" layoutX="200.0" layoutY="145.0" prefWidth="80.0" />
      <Label layoutX="100.0" layoutY="200.0" text="Special Instructions:" />
      <TextField fx:id="instructionsField" layoutX="250.0" layoutY="195.0" prefWidth="200.0" />
      <Button layoutX="200.0" layoutY="260.0" mnemonicParsing="false" text="Place Order" onAction="#handlePlaceOrder"/>
      <Button layoutX="20.0" layoutY="20.0" mnemonicParsing="false" text="Back" onAction="#handleBack"/>
      <Label fx:id="statusLabel" layoutX="200.0" layoutY="320.0" text="" />
   </children>
</AnchorPane>